<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/styles.css' />
  </head>
  <body>
    <main class='flex h-[calc(100dvh)] w-full'>
      {{> navbar}}
      <div class='pl-64 flex-1'>
        {{{body}}}
      </div>
    </main>
    <div id='modal' class='hidden items-center justify-center h-screen w-screen fixed top-0 bg-black bg-opacity-60 z-10'>
      <!--Modal Dialog -->
      <div class='bg-white max-w-xl w-full rounded-md absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2'>
        <!--Modal Content -->
        <div class='p-3 flex items-center justify-between border-b border-b-gray-300'>
          <!--Modal Header -->
          <h3 id="modal-header" class='font-semibold text-xl'>
            Confirm Action
          </h3>
          <span class='modal-close cursor-pointer'>Ã—</span>
          <!-- Close Modal -->
        </div>
        <div id="modal-body" class='p-3 border-b border-b-gray-300'>
          <!--Modal Body -->
          <p>
            Are you sure you want to do this?
          </p>
        </div>
        <div class='p-3 flex items-center justify-start'>
          <!--Modal Footer -->
          <div>
            <button id="confirm-btn" class='text-sm text-white bg-blue-500 rounded-md px-4 py-2'>Confirm</button>
            <button class='modal-close text-sm text-gray-400 border rounded-md px-4 py-2'>Cancel</button>
            <!-- Close Modal -->
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src='/javascripts/scripts.js'></script>
</html>
